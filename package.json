{
  "name": "ethereal-presence",
  "version": "1.0.0",
  "description": "Next.js app with OpenTelemetry instrumentation",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint"
  },
  "dependencies": {
    "next": "^16.0.5",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "@vercel/otel": "^2.1.0",
    "@opentelemetry/api": "^1.9.0"
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "npm run typecheck && vite build",
    "build:ci": "vite build",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "typecheck:functions": "tsc --project tsconfig.functions.json --noEmit",
    "lint": "eslint . --ext .ts,.tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ci": "vitest run --coverage --reporter=junit --outputFile=./test-results.xml",
    "validate": "npm run typecheck && npm run lint && npm run test",
    "prepare": "husky || true"
  },
  "dependencies": {
    "@netlify/blobs": "^10.4.1",
    "@upstash/qstash": "^2.7.0",
    "@upstash/workflow": "^0.2.23",
    "drizzle-orm": "^0.38.0",
    "postgres": "^3.4.0",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-router-dom": "^7.10.0",
    "resend": "^4.0.0"
  },
  "overrides": {
    "react": "19.0.0",
    "react-dom": "19.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@netlify/edge-functions": "^3.0.2",
    "@netlify/functions": "^5.1.0",
    "@netlify/vite-plugin": "^2.7.15",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@types/node": "^22.0.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^9.16.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "eslint-plugin-security": "^3.0.1",
    "globals": "^15.13.0",
    "husky": "^9.1.7",
    "jsdom": "^25.0.1",
    "lint-staged": "^15.2.10",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.0",
    "vite": "^7.2.6",
    "vitest": "^2.1.8"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
